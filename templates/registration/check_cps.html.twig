{% extends 'base.html.twig' %}



{% block body %}
    {% for message in app.flashes('cpsError') %}
                
        <div class="alert alert-warning">
        {{ message }}
        </div>
    {% endfor %}
<div class="row justify-content-center">
    <div class="col-md-5 text-center">
            {{form_start(form)}}
            {{form_row(form.numeroCarte, {'label' : "Votre n° de carte CPS/CPF (10 chiffres)" }) }}
            {{form_row(form.nomDexercice, {'label' : "Votre nom de famille (tel qu'il apparaît sur votre carte)" })}}
            <button type="submit" class="btn btn-primary">Vérifier votre carte CPS/CPF</button>
            {{form_end(form)}}
    </div>
</div>
            {% endblock %}