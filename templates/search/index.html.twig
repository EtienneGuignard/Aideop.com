{% extends 'base.html.twig' %}


{% block body %}
<div class="row row-flex justify-content-center mb-5">
    <div class="pageTitle">
        Rechercher un(e) utilisateur(rice)
    </div>

    <div class="col-md-5"> 
            {% include "form/searchUser.html.twig" %}
    </div>
</div>
    <section class="row d-flex justify-content-center">
        {% for result in results %}
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                    <img src="{{asset('assets/img/surgeon_icon.png')}}" alt="Icon chirurgien">
                    <h3 class="h3CardSearch mt-3">{{result.name}} {{result.firstname}} </h3>
                    </div>
                    <div class="flip-card-back">
                    <h2 class="h2CardSearch mt-2">Mes coordonnées</h2>
                    <ul class="list_search">
                        <li><span>Adresse email: </span>{{result.email}}</li>
                        <li><span>Numéro: </span>{{result.phoneNumber}}</li>
                        <li><span>Numéro Cps: </span>{{result.cpsnumber}}</li>
                    </ul>
                    </div>
                </div>
            </div> 
        {% endfor %}
        {% if results is empty %}
        <div class="text-center">Aucun résultat à afficher.</div>
        {% endif %}
    </section>
{% endblock %}
