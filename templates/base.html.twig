<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}aideop.com{% endblock %}</title>
        
        <link rel="icon" href="{{ asset('assets/img/favicon.ico') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/benoitswatch.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&display=swap" rel="stylesheet"> 
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        {% block header %}
            {% include "header.html.twig" %}
        {% endblock %}   
    <div class="container"> 
        {% block body %}{% endblock %}
    </div>
        {% block footer %}
            {% include "footer.html.twig" %}
        {% endblock %}
        {% block script %}
            <script src="{{ asset('assets/bootstrap/js/bootstrap.bundle.min.js') }}" crossorigin="anonymous"></script>
            <script type="text/javascript" src="{{ asset('assets/js/jquery-3.6.0.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('assets/js/script.js') }}"></script>
        {% endblock %}
    </body>
</html>
