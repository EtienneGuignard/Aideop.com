{% extends "base.html.twig" %}
{% block body %}
{% if error %}
    

    <p class="error"> {{error.messageKey | trans(error.messageData, 'security') }}</p>
    {% endif %}
    <div class="row justify-content-center">
        <div class="col-md-8 pageTitle">
                Connexion
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form class="loginForm" action="{{path('login')}}" method="POST" name="login_registration">
                <label for="username">Email :</label>
                <input type="text" name="_username" id="username" value="{{app.session.get('email')}}" class="form-control" required>
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" value="{{app.session.get('password')}}" class="form-control" required>
                <div class="formSubmit">
                    <button type="submit" class="btn btn-secondary my-5">Me connecter</button>
                </div>
            </form>
        </div>
        </div>    
    </div>
{% endblock %}
