{% extends 'base.html.twig' %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 pageTitle">
            Modifier une demande d'AO
    </div>
</div>
    {{form_start(form)}}
    <div class="row justify-content-center">
        <div class="col-md-5">
            {{form_row(form.startDate)}}
            {{form_row(form.enDate)}}
            {{form_row(form.speciality)}}
            {{form_row(form.description)}}
            {{form_row(form.numberAoNeeded)}}
            {{form_row(form.clinicName)}}
            {{form_row(form.clinicZipCode)}}
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <div class="col-auto">
            <button class="btn btn-secondary" type="submit">Modifier</button>
        </div>
    </div>
        
    {{form_end(form)}}


{% endblock %}