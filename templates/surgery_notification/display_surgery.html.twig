{% extends 'base.html.twig' %}

{% block title %}Vos disponibilités{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{# bloqué les dates passé peu-être fait en js/jQuery #}

    {% for surgery in surgeries %}
        <p>{{surgery.start_date | date('d-m-Y') }}</p>
        <p>{{surgery.en_date | date('d-m-Y') }}</p>
        <p>{{surgery.speciality}}</p>
        <a href="{{path('edit_surgery_notification',  { 'id': surgery.id })}}">modifier</a>
        <a href="{{path('delete_surgery_notification',  { 'id': surgery.id })}}">supprimer</a>
    {% endfor %}
{% endblock %}