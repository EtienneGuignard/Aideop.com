        {{ message }}
    </div>
    {% endfor %}
    <div class="d-flex">
        <div class="row bannerImage" style="background-image: url(' {{ asset("../assets/img/undraw_doctors_hwty.png") }} ');
        height: 100vh">
        <div class="row justify-content-center">
            <div class="homeIntro col-md-6">
