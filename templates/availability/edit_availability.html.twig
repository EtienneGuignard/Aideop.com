{% extends 'base.html.twig' %}

{% block title %}Vos disponibilités{% endblock %}

{% block body %}

{{form_start(form, {attr: {novalidate: 'novalidate'}})}}
    <div class="row justify-content-center">
        <div class="col-md-5">
            {{form_row(form.startDate)}}
            {{form_row(form.endDate)}}
            {{form_row(form.commuteDistance)}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <button class="btn btn-secondary mt-3" type="submit">Modifier cette disponibilité</button>
        </div>
    </div>
{{form_end(form)}}


{% endblock %}