{% extends 'base.html.twig' %}

{% block body %}
{% for message in app.flashes('editAvailabilityError') %}
        <div class="alert alert-danger appFlashError mt-3">
            {{ message }}
        </div>
{% endfor %}
<div class="row d-flex flex-wrap justify-content-center" >
    <div class="pageTitle">
        Modifier une disponibilité :
    </div>
{{form_start(form, {attr: {novalidate: 'novalidate'}})}}
    <div class="row justify-content-center">
        <div class="col-md-5">
            {{form_row(form.startDate)}}
            {{form_row(form.endDate)}}
            {{form_row(form.commuteDistance)}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <button class="btn btn-secondary mt-3" type="submit">Modifier cette disponibilité</button>
        </div>
    </div>
{{form_end(form)}}


{% endblock %}